<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CalculatorDesktopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CalculatorDesktopApp"
    xmlns:views="using:CalculatorDesktopApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.FlyoutItemIsVisible="False">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title=""
        ContentTemplate="{DataTemplate views:SettingsView}" 
        Route="settings"/>
    <ShellContent 
        ContentTemplate="{DataTemplate views:HelpView}" 
        Route="help"/>

</Shell>
